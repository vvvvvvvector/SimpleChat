<Window x:Class="Chat.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="StartWindow" Height="200" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">

            <UniformGrid Margin="3" Columns="3">
                <TextBlock Text="Name"/>
                <TextBlock Text="IP"/>
            </UniformGrid>

            <UniformGrid Columns="3">
                <TextBox Name="NameBox" Margin="3"/>
                <TextBox
                KeyDown="IpBox_KeyDown"
                Name="IpBox" 
                Text="Host IP here:>" 
                Margin="3" GotFocus="IpBox_GotFocus"/>
                <Button 
                Name="connectButton"
                Click="ConnectButton" Content="Connect" Margin="3"/>
            </UniformGrid>

        </StackPanel>

        <Button 
            Click="HostButton" 
            Grid.Row="1" Content="I'll be host" Margin="3"/>

    </Grid>
</Window>
